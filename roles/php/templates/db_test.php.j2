        <?php
        // Test database connection
        try {
            $dsn = "mysql:host=$db_host;dbname=$db_name;charset=utf8mb4";
            $options = [
                PDO::ATTR_ERRMODE => PDO::ERRMODE_EXCEPTION,
                PDO::ATTR_DEFAULT_FETCH_MODE => PDO::FETCH_ASSOC,
                PDO::ATTR_EMULATE_PREPARES => false,
            ];
            
            $pdo = new PDO($dsn, $db_user, $db_pass, $options);
            
            echo '<div class="success">';
            echo '<strong>✓ Database Connection Successful!</strong><br>';
            echo 'Successfully connected to MySQL database.';
            echo '</div>';
            
            // Get MySQL version
            $version = $pdo->query('SELECT VERSION()')->fetchColumn();
            
            // Get database size
            $stmt = $pdo->query("SELECT 
                table_schema AS 'Database',
                ROUND(SUM(data_length + index_length) / 1024 / 1024, 2) AS 'Size (MB)'
                FROM information_schema.tables 
                WHERE table_schema = '$db_name'
                GROUP BY table_schema");
            $db_info = $stmt->fetch();
            
            echo '<h2>Connection Details</h2>';
            echo '<table>';
            echo '<tr><th>Parameter</th><th>Value</th></tr>';
            echo '<tr><td>Database Host</td><td>' . htmlspecialchars($db_host) . '</td></tr>';
            echo '<tr><td>Database Name</td><td>' . htmlspecialchars($db_name) . '</td></tr>';
            echo '<tr><td>Database User</td><td>' . htmlspecialchars($db_user) . '</td></tr>';
            echo '<tr><td>MySQL Version</td><td>' . htmlspecialchars($version) . '</td></tr>';
            echo '<tr><td>Database Size</td><td>' . ($db_info['Size (MB)'] ?? '0.00') . ' MB</td></tr>';
            echo '<tr><td>Connection Status</td><td><span style="color: green;">●</span> Connected</td></tr>';
            echo '</table>';
            
            // List tables in database
            $stmt = $pdo->query("SHOW TABLES");
            $tables = $stmt->fetchAll(PDO::FETCH_COLUMN);
            
            echo '<h2>Database Tables</h2>';
            if (count($tables) > 0) {
                echo '<table>';
                echo '<tr><th>Table Name</th></tr>';
                foreach ($tables as $table) {
                    echo '<tr><td>' . htmlspecialchars($table) . '</td></tr>';
                }
                echo '</table>';
            } else {
                echo '<div class="info">';
                echo '<strong>ℹ️ No tables found</strong><br>';
                echo 'The database is empty. You can start creating tables for your application.';
                echo '</div>';
            }
            
            // Test query
            echo '<h2>Test Query</h2>';
            echo '<div class="info">';
            echo '<strong>Query:</strong> <code>SELECT NOW() as current_time, DATABASE() as current_db</code><br><br>';
            $stmt = $pdo->query('SELECT NOW() as current_time, DATABASE() as current_db');
            $result = $stmt->fetch();
            echo '<strong>Result:</strong><br>';
            echo 'Current Time: ' . htmlspecialchars($result['current_time']) . '<br>';
            echo 'Current Database: ' . htmlspecialchars($result['current_db']);
            echo '</div>';
            
        } catch (PDOException $e) {
            echo '<div class="error">';
            echo '<strong>✗ Database Connection Failed!</strong><br>';
            echo 'Error: ' . htmlspecialchars($e->getMessage());
            echo '</div>';
            
            echo '<h2>Troubleshooting Tips</h2>';
